<% if user_signed_in? %>
  <li class='navigation-item'><%= link_to 'Edit account', edit_user_registration_path, class: 'navigation-link' %></li>
  <li class='navigation-item'><%= link_to 'Sign out', destroy_user_session_path, :method=>'delete', class: 'navigation-link' %></li>
<% else %>
  <li class='navigation-item'><%= link_to 'Sign in', new_user_session_path, class: 'navigation-link' %></li>
  <li class='navigation-item'><%= link_to 'Sign up', new_user_registration_path, class: 'navigation-link' %></li>
<% end %>
<% if user_signed_in? %>
  <% if current_user.try(:admin?) %>
    <li class='navigation-item'><%= link_to 'Admin', '/admin', class: 'navigation-link' %></li>

    <li class='navigation-item'><%= link_to 'Users', users_path, class: 'navigation-link' %></li>
  <% end %>
<% end %>
